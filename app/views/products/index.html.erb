<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <h1>All Products</h1>
      <th>Image</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag "products/#{product.image_url}" %></td>
        <td>
          <span class="product_title"><%= product.title %></span><%= product.description %></td>
        <td><%= print_price(product.price) %><br/><%= link_to "View Product", product_path(product) %>
        <td><%= print_stock(product.stock) %></td>
        <td><br/><%= link_to "Delete Product", :method => :destroy %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'Create a New Product', new_product_path, id: "new_product" %></p>
